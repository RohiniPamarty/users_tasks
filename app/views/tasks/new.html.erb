<%= form_for @task, :html => { :class => 'form-horizontal' }  do |f| %>
<fieldset>
    <legend> New Task </legend>

  <div class="control-group">
    <%= f.label :detail, :class => 'control-label' %>
    <div class="controls">
    <%= f.text_area :detail, :cols => 60, :rows => 2 %>
  </div>
  </div>
  <div class="control-group">
    <%= f.label :completion, :class => 'control-label'  %>
    <div class="controls">
    <%= f.date_select :completion, :order => [:day, :month, :year] %>
  </div>
  </div>
  <div class="control-group">
  <label class="control-label">
   Add users
  </label>
 <div class="controls">

<%= f.collection_select :user_ids, User.find(:all), :id, :email,{}, { :multiple => true, :size=>6 } %><br />

  </div>
</div>
    <div class="form-actions" >
    <%= f.submit nil, :class => 'btn btn-primary' %>
  </div>
</fieldset>
<% end %>
